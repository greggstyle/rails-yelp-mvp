<div class ="container">
<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <h2> Add Review for <%= @restaurant.name %></h2>


    <%= form_for([@restaurant, @review]) do |f| %>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :rating %>
      <%= f.text_field :rating, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>  <%= link_to "back to restaurants" , restaurants_path, class: 'btn btn-info'%>
    <% end %>

  </div>
</div>
</div>
