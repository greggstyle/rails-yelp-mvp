

<div class ="container">

  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <h1> Restaurants </h1>
      <% @restaurants.each do |restaurant| %>
      <h4> <%= restaurant.category %> </h4>
      <h3> <%= restaurant.name %> </h3>
      <p> <%= restaurant.address %>
        <%= restaurant.phone_number %></p>
        <%= link_to "Link", restaurant_path(restaurant), class: "btn btn-danger" %>
        <% end %>
        <br>
        <br>
        <%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-success btn-lg" %>

      </div>
    </div>
  </div>
