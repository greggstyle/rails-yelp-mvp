<div class ="container">

  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <h2> Add Restaurant </h2>
      <%= form_for(@restaurant) do |f| %>

      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>  <%= link_to "back to restaurants" , restaurants_path, class: 'btn btn-info'%>
      <% end %>

    </div>
  </div>
</div>
